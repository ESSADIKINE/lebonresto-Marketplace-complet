{
    "name": "lebonresto-monorepo",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev:web": "npm run dev --workspace=@lebonresto/web",
        "dev:admin": "npm run dev --workspace=@lebonresto/admin",
        "dev:owner": "npm run dev --workspace=@lebonresto/owner",
        "build:all": "npm run build --workspaces",
        "lint:all": "npm run lint --workspaces"
    }
}